<searchComponent name="headword_and_forms_suggester"
                 class="solr.SuggestComponent">
  <lst name="suggester">
    &common_suggester_components;
    <str name="name">headword_and_forms_suggester</str>
    <str name="suggestAnalyzerFieldType">me_text</str>
    <str name="field">word_suggestions</str>
    <str name="storeDir">headword_and_forms_suggester_index</str>

  </lst>
</searchComponent>

<requestHandler name="/headword_and_forms_suggester"
                class="solr.SearchHandler"
                startup="lazy">
<lst name="defaults">
  <str name="suggest">true</str>
  <str name="suggest.count">15</str>
  <str name="suggest.dictionary">headword_and_forms_suggester</str>
</lst>
<arr name="components">
  <str>headword_and_forms_suggester</str>
</arr>
</requestHandler>
